<h1>Followers (<%= @users.count %>)</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <% if @user.follower_users.any? %>
            <ul style="list-style:none;" class="row">
                <% @users.each do |user| %>
                    <li>
                        <%= link_to gravatar_for(user, size: 50), user, class: "col-md-2" %>
                        <span class="col-md-4"><%= link_to user.name, user %></span>
                        <div class="col-md-6"></div>
                    </li>
                    <br>
                    <br>
                    <br>
                <% end %>
            </ul>
        <% else %>
            <h2>No Followers</h2>
        <% end %>
    </div>
</div>