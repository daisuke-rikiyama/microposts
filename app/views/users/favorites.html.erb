<h1>Favorites (<%= @user.favorites.count %>)</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <% if @favorites.any? %>
            <%= page_entries_info @favorites %>
            <ul style="list-style:none;" class="row">
                <% @favorites.each do |favorite| %>
                    <%= render partial: 'microposts/micropost', locals: { micropost: favorite } %>
                    <br>
                    <br>
                <% end %>
            </ul>
            <%= paginate @favorites %>
        <% else %>
            <h2>No Favorites</h2>
        <% end %>
    </div>
</div>