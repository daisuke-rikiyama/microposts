<h1>Favorites <%= @user.favorites.count %></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <% if @user.added_favorites.any? %>
            <ul style="list-style:none;" class="row">
                <% @user.added_favorites.each do |micropost| %>
                    <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
                <% end %>
            </ul>
        <% else %>
            <h2>No Favorites</h2>
        <% end %>
    </div>
</div>